@model IEnumerable<ITWebDB.Entities.Category>

@{
    ViewBag.Title = "Danh sách danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách danh mục</h2>

<a class="btn btn-primary" href ="@Url.Action("CategoryAdd", "Admin")">
    <i class="glyphicon glyphicon-plus"></i> Thêm danh mục
</a>
<table class="table">
    <tr>
        <th>
            <h3> @Html.DisplayNameFor(model => model.CategoryName) </h3>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            <a href="@Url.Action("EditCategory",
                            "Admin", new { id = item.CategoryId })"
               class="btn btn-primary">
                <i class="glyphicon glyphicon-pencil"></i>
            </a>
            <a href="@Url.Action("DeleteCategory",
                            "Admin",new { id=item.CategoryId })"
               class="btn btn-danger btn-xoa">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
